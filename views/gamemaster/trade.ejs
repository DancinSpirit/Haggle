<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/scripts/trade.js" defer></script>
    <title>TRADE!</title>
</head>
<body>
    <%- include("../partials/nav") %>

    <h1>GET READY TO TRADE!</h1>

    <section class= trader>
        <form action="/gamemaster/players" method="post">
            
            <select name="player" >
                <% players.forEach(player => { %>
                    <option value="<%= player._id %>"><%= player.name %></option>
                <% }) %>
            </select>

            <% players.forEach(player => { %>

                <select class="<%= player.name %> items" name="item">
                    <% player.items.forEach(item => { %>
                        <option value="<%= item._id %>"><%= item.name %></option>
                    <% }) %>
                </select>

                <select class="<%= player.name %> rules" name="rule">
                    <% player.rules.forEach(rule => { %>
                        <option value="<%= rule._id %>"><%= rule.number %></option>
                    <% }) %>
                </select>

            <% }) %>

        </form>
    </section>

    <section class= tradee>
        <form action="/gamemaster/players" method="post">
            
            <select name="player" >
                <% players.forEach(player => { %>
                    <option value="<%= player._id %>"><%= player.name %></option>
                <% }) %>
            </select>

            <% players.forEach(player => { %>

                <select class="<%= player.name %> items" name="item">
                    <% player.items.forEach(item => { %>
                        <option value="<%= item._id %>"><%= item.name %></option>
                    <% }) %>
                </select>

                <select class="<%= player.name %> rules" name="rule">
                    <% player.rules.forEach(rule => { %>
                        <option value="<%= rule._id %>"><%= rule.number %></option>
                    <% }) %>
                </select>

            <% }) %>

        </form>
    </section>
    
    <input type="button" value="Click Me!" onclick="submitForms()" />

</body>
</html>
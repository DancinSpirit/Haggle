<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Players</title>
    <link rel="stylesheet" href="/styles/main.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/scripts/warning.js" defer></script>
    <%- include("../partials/font")%>
</head>
<body>
    <%- include("../partials/nav") %>

    <!-- Player List -->
    <h1>Players Page</h1>
    <%if(players.length===0){%>
        <h2>There are no players!</h2>
    <%}else{%>
        <article id="list">
            <% players.forEach(player =>{ %> 
                <section class="player">
                    <p><%= player.name %></p>
                    <p><a href="/gamemaster/players/<%=player._id%>/rules">Rules</a></p>
                    <p><a href="/gamemaster/players/<%=player._id%>/items">Items</a></p>
                    <p>Points: <%=player.points%></p> 
                    <form action="/gamemaster/players/<%=player._id%>?_method=DELETE" method="post">
                        <input type="submit" value="Delete Player">
                    </form>
                </section>
            <% }) %> 
        </article>
    <%}%>
    <form action="/gamemaster/players?_method=DELETE" method="POST" id="form">
        <p id="warning">WARNING: THIS WILL DELETE ALL ACOUNTS INCLUDING YOURS!</p>
        <input type="submit" value="Start Game Over with New Players" id="game-over">
    </form>
</body>
</html>